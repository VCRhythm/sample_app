<span class="question_header">
  <h3>Daily Questionnaire - 
    <% if(!@day.today?()) %>
      <span class='highlight_date' id='date_tag' date='<%= @day %>'>
    <% else %>
      <span class='today_date' id='date_tag' date='<%= @day %>'>
    <% end %>
    <%= link_to '<<', root_path(:date=>@day-1) %>
    <%= @day.strftime('%A, %b. %e, %Y') %>
    </span>
    <%= link_to_unless(@day.today?(), '>>', root_path(:date=>@day+1)) %>
    <%= link_to_unless(@day.today?(), '>|', root_path(:date=>Date.current())) %>
    <%= submit_tag "No Flows", class: "btn btn-small btn-primary", id: "no_expense_btn" %>
  </h3>
</span>
<%= render 'cash' %>