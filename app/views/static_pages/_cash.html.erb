<% debt_percent=(Float(@cash)/@check_acct.balance)*100 %>
<h3>Available Income: <a id="incomeVal" cash="<%= @cash %>"><%= number_to_currency(@cash, options={:precision=>0})%></a> (Updated <%= @check_acct.created_at.strftime('%b. %e, %Y') %>)
<div id="incomeBoostSpan">BOOST:<span class="add-on">$</span><%= text_field_tag 'incomeBoost', nil, :placeholder=>'0', :class=> 'input-mini', :id=>'incomeBoost' %><span class="add-on">.00</span> <%= button_tag 'Save', :id=>'saveIncome', :class=>'btn btn-medium btn-success' %> <%= button_tag 'Cancel', :id=>'cancelIncome', :class=>'btn btn-medium btn-warning' %> <div id="slider"></div></div></h3>
<div class="progress">
  <div class="bar bar-success" id="incomeBar" style="width: <%= debt_percent-0.1 %>%;" value="<%= @cash %>" max-value="<%= @check_acct.balance %>"></div> <!-- -0.1% to keep bar from sliding -->
  <% @flow_sum.each {|key, value| if value>0 %>
    <% flow_name=Flow.where(:id=>key).first.name %>
    <div class="bar expense <%=flow_name %>" style="width: <%= (value/@check_acct.balance)*100 %>%;" rel="popover" data-content="$<%= value.to_i %>" data-original-title="<%= flow_name %>"></div>
  <% end } %>
</div>